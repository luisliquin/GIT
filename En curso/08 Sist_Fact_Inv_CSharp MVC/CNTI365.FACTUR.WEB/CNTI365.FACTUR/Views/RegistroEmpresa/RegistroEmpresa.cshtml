@model modelList
@using CNTI365.FACTUR.Models

@{
    ViewBag.Title="RegistroEmpresa";
    Layout=null;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Registro de empresa</title>
    <!--CSS-->
    <link href="~/Content/plugins/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style/style.css" rel="stylesheet" />

    <!--JS-->
    <script src="~/Content/plugins/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/plugins/js/bootstrap.min.js"></script>
    <script>
        var appUrl = "@Url.Content("~/")";
    </script>

</head>
<body>
    <br /><br /><br />

    <div class="container">
        <div class="row">

            <div class="divregistroempresa">

                <div class="col-md-12">
                    <div class="col-md-3">
                        <span><label><b> Registrar Empresa</b></label></span>
                    </div>
                </div>

                <br /><br /><br />

                <div class="col-md-12">
                    <div class="col-md-3">
                        <img src="~/Content/img/img_logo/TuLogo.png" alt="Avtar" width="80px" class="img-circle previsualizar" />
                        <label for="imagen" class="input-label"><i class="fa fa-cloud-upload"></i>Subir imagen</label><input type="file" name="imagen" id="imagen" />
                    </div>


                    <div class="col-md-6">
                        <span><label><b>Razon Social:</b></label></span>
                        <input type="text" class="form-control" id="txtrazonsocial" placeholder="Razon Social"/>
                        <span id="msjrazonsocial"></span>
                    </div>

                    <div class="col-md-3">
                        <span><label><b>RUC:</b></label></span>
                        <input type="text" class="form-control" id="txtruc" placeholder="RUC" maxlength="11" required onkeypress="return solonumeros(event)"/>
                        <span id="msjruc"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-4">
                        <span><label><b>Email:</b></label></span>
                        <input type="text" class="form-control" id="txtemail" placeholder="Email"/>
                        <span id="msjemail"></span>
                    </div>

                    <div class="col-md-2">
                        <span><label><b>Pais:</b></label></span>
                        <select class="form-control" id="slpais">
                            @foreach (var item in Model.listPais) {
                                <option value="@item.idpais">@item.pais</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <span><label><b>Moneda:</b></label></span>
                        <select class="form-control" id="slmoneda">
                            @foreach (var item in Model.listMoneda) {
                                <option value="@item.idmoneda">@item.moneda</option>
                            }
                        </select>
                    </div>
                    <br /><br /><br /><br />
                </div>

                <div class="col-md-12">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-9">
                        <span><label><b>Direccion:</b></label></span>
                        <input type="text" class="form-control" id="txtdireccion" placeholder="Direccion"/>
                    </div>
                    <br /><br /><br /><br />
                </div>

                <div class="col-md-12" >
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-2">
                        <span><label><b>¿Vende con impuestos?:</b></label></span>
                    </div>

                    <div class="col-md-6">
                        SI<input type="radio" id="rdsi" />
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        NO<input type="radio" id="rdno" />
                    </div>
                    <br /><br /><br />
                </div>

                <div class="col-md-12" id="divvendeImpuestos">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-2">
                        <span><label><b>Tipo Impuesto:</b></label></span>
                        <select class="form-control" id="sltipoimpuesto">
                            @foreach (var item in Model.listTImpuesto) {
                                <option value="@item.idtimpuestos">@item.timpuestos</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <span><label><b>Porcentaje:</b></label></span>
                        <select class="form-control" id="slporcentaje">
                            @foreach (var item in Model.listPImpuestos) {
                                <option value="@item.idpimpuestos">@item.pimpuestos</option>
                            }
                        </select>
                        <br />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-2">
                        <button type="button" class="btn btn-default" id="btnsiguiente">
                            <img src="~/Content/img/imagenes/flecha-correcta.png" alt="Alternate Text" />Siguiente
                        </button>
                    </div>

                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger">Cancelar</button>
                    </div>
                </div>
            </div>

            <div class="divregistrousersuperadmin" style="display: none">
                <div class="col-md-12">
                    <div class="col-md-3"></div>
                    <div class="col-md-9">
                        <span><label>Nombre administrador</label></span>
                        <input type="text" class="form-control" id="txtusername" />
                    </div>
                </div>

                <div class="col-md-12">
                    <br />
                    <div class="col-md-3"></div>
                    <div class="col-md-4">
                        <span><label>Contraseña</label></span>
                        <input type="text" class="form-control" id="txtuseradmin" />
                    </div>
                    <div class="col-md-4">
                        <span><label>Confirmar contraseña</label></span>
                        <input type="text" class="form-control" id="txtpassword" />
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="col-md-3">
                    </div>

                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger" id="btnsiguiente">
                            <img src="~/Content/img/imagenes/flecha-izquierda.png" alt="Alternate Text" />Atras
                        </button>
                    </div>

                    <div class="col-md-2">
                        <button type="button" class="btn btn-default">
                            <img src="~/Content/img/imagenes/salvar.png" alt="Alternate Text" />Registrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script type="text/javascript" src="~/Scripts/app/registroempresa.js"></script>
<script type="text/javascript" src="~/Scripts/js/Validaciones.js"></script>
<script type="text/javascript" src="~/Scripts/js/Global.js"></script>